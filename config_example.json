{
    "sources": {
        "track_and_graph": {
            "db_path": "C:/path/to/your/track_and_graph.db"
        },
        "hometrainer": {
            "logs_path": "C:/path/to/Hometrainer_Logs",
            "unit": "km"
        },
        "git_stats": {
            "author": "Your Name",
            "root_paths": [
                "C:/path/to/git/repos",
                "D:/another/git/folder"
            ]
        },
        "excel": {
            "sources": [
                {
                    "name": "Savings",
                    "file_path": "C:/path/to/finances.xlsx",
                    "tabs": {
                        "2020": "K2:K",
                        "2021": "K2:K",
                        "2022": "K2:K",
                        "2023": "L2:L",
                        "2024": "L2:L",
                        "2025": "L2:L"
                    },
                    "function": "sum",
                    "unit_label": "EUR"
                }
            ]
        }
    },
    "export": {
        "path": "C:/path/to/export/folder",
        "php_mode": false,
        "php_password": "your-secure-password",
        "entries": [
            {"source": "track_and_graph", "type": "group", "id": 1},
            {"source": "track_and_graph", "type": "feature", "id": 10},
            {"source": "hometrainer", "type": "stats", "id": null},
            {"source": "excel", "type": "stats", "id": null},
            {"source": "git_stats", "type": "added", "id": null},
            {"source": "git_stats", "type": "removed", "id": null},
            {"source": "git_stats", "type": "net", "id": null},
            {"source": "git_stats", "type": "commits", "id": null},
            {"source": "git_stats", "type": "projects_created", "id": null}
        ],
        "ftp_sync": {
            "enabled": false,
            "host": "ftp.example.com",
            "port": 21,
            "username": "your_username",
            "password": "your_password",
            "remote_path": "/public_html/stats",
            "passive_mode": true,
            "timeout": 30
        }
    }
}
